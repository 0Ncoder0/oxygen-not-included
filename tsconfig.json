{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@app/notification": [
        "libs/notification/src"
      ],
      "@app/notification/*": [
        "libs/notification/src/*"
      ],
      "@app/kafka": [
        "libs/kafka/src"
      ],
      "@app/kafka/*": [
        "libs/kafka/src/*"
      ],
      "@app/mq": [
        "libs/mq/src"
      ],
      "@app/mq/*": [
        "libs/mq/src/*"
      ]
    }
  }
}